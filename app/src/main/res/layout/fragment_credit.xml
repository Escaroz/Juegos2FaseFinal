<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    tools:context=".adapter.CreditFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="670dp"
        android:src="@drawable/nintendo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".adapter.CreditFragment"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="50dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            tools:text="Usuario gracias por usar la versión 1 de la aplicación." />

        <TextView
            android:layout_width="290dp"
            android:layout_height="220dp"
            android:textColor="#FFFFFF"
            tools:text="Los 10 compositores más famosos de música clásica son:\n\n
                -Wolfgang Amadeus Mozart-\n\n
                -Johann Sebastian Bach-\n\n
                -Ludwig van Beethoven-\n\n
                -Johannes Brahms-\n\n
                -Schubert-\n\n
                -Vivaldi-\n\n
                -Verdi-\n\n
                -Tchaikovsky-\n\n
                -Wagner-\n\n
                -Chopin-" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contactar" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
